<div class="site-card panel">
  <div class="card-image">
    <div class="card-title">
      <h2>{{title}}</h2>
    </div>
  </div>
  <div class="card-description">{{description}}</div>
  {{#if hasFooterAction}}
    <div class="card-footer"><button class="btn btn-xs">{{action}}</button></div>
  {{/if}}
</div>
